
<header class="page-header">
  <h1>Photos Index</h1>
  <a href="/photos/new">+ New Photo</a>
</header>


{{#if (isEmpty photos) }}
  <p class="text-danger">No Photos :(</p>
{{else }}
  <div class="row">
    {{#each photos as |photo|}}
      <div class="col-xs-4">
        <a
          href="/photos/{{ photo.photos._id }}?_method=delete"
          class="text-danger">
          &times;
        </a>
        <p>{{ photo.desc }}</p>
        <img src="{{ photo.photos.url }}" alt="Photo" class="img-responsive">
      </div>
    {{/each }}
  </div>
{{/if }}
